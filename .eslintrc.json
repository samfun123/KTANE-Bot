{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", "tab", { "SwitchCase": 1 }],
        "no-console": "error",
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "yoda": "error",
        "quotes": "error"
    }
}